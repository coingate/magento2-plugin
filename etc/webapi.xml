<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/coingate/place_order" method="POST">
        <service class="CoinGate\Merchant\Api\PaymentInterface" method="placeOrder"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/merchant/update_order" method="POST">
        <service class="CoinGate\Merchant\Api\PaymentInterface" method="updateOrder"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
